<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/layout_half_padding"
    app:cardElevation="@dimen/layout_half_padding"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_owner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_width="90dp"
            android:layout_height="90dp">
        </androidx.appcompat.widget.AppCompatImageView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_repo_name"
            app:layout_constraintStart_toEndOf="@id/iv_owner"
            android:layout_marginStart="@dimen/layout_half_padding"
            android:layout_marginEnd="@dimen/layout_half_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/first_names"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/layout_half_padding"
            />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_repo_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_half_padding"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="@id/tv_repo_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_repo_name"
            tools:text="99999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999"
            android:textStyle="bold"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_star"
            app:layout_constraintTop_toBottomOf="@id/tv_repo_description"
            app:layout_constraintStart_toStartOf="@id/tv_repo_name"
            app:chipIcon="@drawable/ic_stars"
            app:chipIconTint="#FFD200"
            app:chipBackgroundColor="@color/white"
            tools:text="0"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_repo_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/tv_repo_name"
            app:layout_constraintTop_toTopOf="@id/chip_star"
            tools:text="language"
            android:textStyle="bold"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>